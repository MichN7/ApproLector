<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnCisne"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cisne"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.michelle.myapplication.LevelA$PlaceholderFragment">


    <Button
        android:id="@+id/btnLobo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="205dp"
        android:text="Leer" />

    <TextView
        android:id="@+id/txtLeonToro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnLobo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:text="El cisne tomado por ganso"
        android:textColor="@android:color/background_dark"
        android:textSize="30dp" />
</RelativeLayout>
